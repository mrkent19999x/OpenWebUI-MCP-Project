# Open WebUI Stack - Environment Variables
# Copy to .env and fill in your API keys

# ==============================================
# CORE SECURITY
# ==============================================
WEBUI_SECRET_KEY=change-this-super-secret-key-32-chars-min
ADMIN_PASSWORD=change-this-admin-password
JWT_SECRET_KEY=change-this-jwt-secret-key

# ==============================================
# AI PROVIDERS API KEYS
# ==============================================

# 1. Cerebras (Priority #1 - Highest quota)
CEREBRAS_API_KEY=sk-your-cerebras-api-key-here

# 2. Cloudflare Workers AI (Priority #2 - Stable)  
CLOUDFLARE_API_KEY=your-cloudflare-api-token
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id

# 3. GitHub Models (Priority #3 - Multimodal)
GITHUB_TOKEN=ghp_your-github-personal-access-token

# 4. OpenRouter (Priority #4 - Model variety)
OPENROUTER_API_KEY=sk-or-your-openrouter-api-key

# 5. Google AI Studio (Priority #5 - Gemini)
GOOGLE_API_KEY=your-google-ai-studio-api-key

# 6. Together AI (Priority #6 - Latest models)
TOGETHER_API_KEY=your-together-ai-api-key

# 7. DeepInfra (Priority #7 - Backup)
DEEPINFRA_API_KEY=your-deepinfra-api-key

# 8. Replicate (Priority #8 - Specialized)
REPLICATE_API_TOKEN=your-replicate-api-token

# ==============================================
# LOCAL SERVICES
# ==============================================

# Ollama (Local models fallback)
OLLAMA_HOST=http://ollama:11434
OLLAMA_MODELS_DIR=/app/server/storage/ollama/models

# Redis (Caching & Sessions)
REDIS_PASSWORD=change-this-redis-password

# ==============================================
# MONITORING & ANALYTICS
# ==============================================

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_ADMIN_PASSWORD=change-this-grafana-password
GRAFANA_DATABASE_PASSWORD=change-this-db-password

# ==============================================
# NETWORK & SECURITY
# ==============================================

# Domain and SSL
DOMAIN=your-domain.com
LETSENCRYPT_EMAIL=your-email@domain.com

# Nginx
NGINX_SSL_ENABLED=true
NGINX_BASIC_AUTH_USER=admin
NGINX_BASIC_AUTH_PASS=change-this-auth-password

# ==============================================
# ADVANCED FEATURES
# ==============================================

# WebRTC for real-time communication
WEBRTC_ENABLED=true

# Vector Database (for RAG)
VECTOR_DB_TYPE=chromadb
VECTOR_DB_PATH=/app/server/storage/vector-db

# File Storage
FILE_STORAGE_PATH=/app/server/storage/files
MAX_FILE_SIZE=50MB

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# ==============================================
# DEVELOPMENT & DEBUG
# ==============================================

LOG_LEVEL=info
DEBUG_MODE=false
ENABLE_CORS=true
ENABLE_FILE_UPLOAD=true

# ==============================================
# BACKUP & MIGRATION
# ==============================================

# Backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Migration
AUTO_MIGRATE=true
MIGRATION_VERSION=latest